mixin pagination(pagination) 
    nav 
        ul(class="pagination")
            li(class=`page-item ${pagination.currentPage <= 1 ? " disabled": "" }`)
                button(class="page-link" button-pagination=`${pagination.currentPage - 1}`) &lt;

                //- hiển thị giới hạn số trang
                //-  - for (var i = pagination.currentPage - 1; i <= pagination.currentPage + 1; i++)
                //- //-kiểm tra nếu số trang hiện tại = lần lặp hiện tại thì thêm class active
                //- li(class=`page-item ${pagination.currentPage == i ? "active" :""}`)
                //-     button(class="page-link" button-pagination=i) #{i}


            - for (var i = 1; i <= pagination.totalPage; i++)
                //-kiểm tra nếu số trang hiện tại = lần lặp hiện tại thì thêm class active
                li(class=`page-item ${pagination.currentPage == i ? "active" :""}`)
                    button(class="page-link" button-pagination=i) #{i}

            li(class=`page-item ${pagination.currentPage >= pagination.totalPage ? " disabled": "" }`)
                button(class="page-link" button-pagination=`${pagination.currentPage + 1}`) &gt;