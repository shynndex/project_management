mixin alert-success(time) 
 - if (messages.success)
        .message.info
            div(class="alert alert-success" role="alert" show-alert data-time=time)  !{messages.success[0]}
                span(close-alert) x

mixin alert-error(time) 
 - if (messages.error)
        .message.info
            div(class="alert alert-danger" role="alert" show-alert data-time=time)  !{messages.error}
                span(close-alert) x