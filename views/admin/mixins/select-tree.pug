mixin select-tree(parentCategory, level = 1, parent_id = "", current_id = "")
  each item in parentCategory
    if item.id != current_id
      - const prefix = Array(level + 1).join('-- ')
      option(
        value=item.id,
        selected=(item.id == parent_id ? true : false)
      ) #{prefix}#{item.title}
      if item.children && item.children.length > 0
        +select-tree(item.children, level + 1, parent_id, current_id)