extends ../../layouts/defaults.pug
include ../../mixins/filter-status.pug
include ../../mixins/form-search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/alert.pug
include ../../mixins/sort.pug


block content
    h1 Danh mục sản phẩm
    +alert-success("3000")
    +alert-error(5000)

    .card.mb-3
        .card-header Danh sách 
        .card-body
            .row 
                .col-8                    
                .col-4 
                    a(href=`${prefixAdmin}/products-category/create` class="btn btn-outline-success") + Thêm mới

        

        table(class="table table-hover table-sm table-striped table-bordered" checkbox-multi)
            thead 
                tr 
                    th 
                        input(type="checkbox" name="checkall")
                    th STT 
                    th Hình ảnh 
                    th Tiêu đề 
                    th Vị trí 
                    th Trạng thái 
                    th Hành động

            tbody 
                each item,index in category
                    tr 
                        td 
                            input(type="checkbox" name="id" value=item.id)
                        td #{index+1}
                        td 
                            img(src= item.thumbnail, alt= item.title width="100px" height="auto")
                        td #{item.title}
                        td #{item.price}
                        td  
                            input(type="number"
                                name="position"
                                style="width:60px;text-align:center"
                                min="1"
                                value=item.position
                                )
                        td 
                            if item.status == 'active'
                                a(
                                    href="javascript:;" 
                                    class="badge text-bg-success text-decoration-none"
                                    data-status=item.status
                                    data-id=item.id
                                    button-change-status
                                ) Hoạt động
                            else    
                                a(
                                    href="javascript:;" 
                                    class="badge text-bg-danger text-decoration-none"
                                    data-status=item.status
                                    data-id=item.id
                                    button-change-status
                                ) Không hoạt động
                        td 
                            a(
                            href=`${prefixAdmin}/product-category/detail/${item.id}`
                            class="btn btn-secondary btn-sm"
                            ) Chi tiết

                            a(
                                href=`${prefixAdmin}/product-category/edit/${item.id}`
                                class="btn btn-warning btn-sm"
                            ) Sửa

                            button(
                            class="btn btn-danger btn-sm ms-1"
                            button-delete 
                            data-id=item.id 
                            ) Xóa