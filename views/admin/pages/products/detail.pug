extends ../../layouts/defaults.pug

block content  
    div(class="container-fluid")
        if(product.title)
            h1(class="product-detail-title") #{product.title}

        if(product.price)
            div(class="product-detail-item") Giá: 
                b #{product.price}$

        if(product.discountPercentage)
            div(class="product-detail-item") Giảm giá: 
                b #{product.discountPercentage}%

        if(product.stock)
            div(class="product-detail-item") Còn lại: 
                b #{product.stock}

        if(product.thumbnail)
            div(class="product-detail-item") 
                img(class="product-thumbnail", src=product.thumbnail, alt="thumbnail")

        if(product.status)
            div(class="product-detail-item") 
                span Trạng thái: 
                if(product.status == "active")
                    span(class="badge text-bg-success") Hoạt động
                else 
                    span(class="badge text-bg-danger") Dừng hoạt động

        if(product.position)
            div(class="product-detail-item") Vị trí: 
                b #{product.position}

        if(product.description)
            div(class="product-detail-item") 
            | Mô tả:
            != product.description
        a(
            href=`${prefixAdmin}/products/edit/${product.id}`
            class="btn btn-warning"
         ) Chỉnh sửa 