extends ../../layouts/defaults.pug
include ../../mixins/alert.pug

block content
    +alert-success(5000)
    +alert-error(5000)
    h1(class="mb-4") Chỉnh sửa nhóm quyền

    form(action=`${prefixAdmin}/roles/edit/${data.id}?_method=PATCH` method="POST")
    
        div(class="mb-3")
            label(for="title") Tiêu đề
            input(type="text", name="title" id="title" class="form-control" value=data.title required)

        div(class="mb-3")
            label(for="desc") Mô tả
            input(type="text" name="description" class="form-control" id="desc" value=data.description)

        div(class="mt-3")
            button(type="submit" class="btn btn-primary") Cập nhật





