extends ../../layouts/defaults.pug
include ../../mixins/box-head.pug

block content
    .container.my-3
        .row    
            .col-12 
                +box-head("Danh sách phòng")
                

        .row.mb-3
            .col-12
                a(href="/rooms-chat/create" class="btn btn-sm btn-success me-1") Tạo phòng chat 

        .row 
            each room in roomChat
                .col-4 
                    div(class="box-room")
                        div(class="inner-avatar")
                            img(src=(room.avatar||`/images/avatar.png`) ,alt=`${room.title}`)
                        div(class="inner-info")
                            div(class="inner-name") #{room.title}
                            div(class="inner-button")
                                a(href=`chat/${room.id}` class="btn btn-sm btn-primary me-1") Nhắn tin

                        
