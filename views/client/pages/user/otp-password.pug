extends ../../layouts/auth.pug
include ../../mixins/alert.pug

block content
  +alert-error(2000)
  body.bg-light
    .container
      .d-flex.justify-content-center.align-items-center.min-vh-100
        .col-md-6.col-lg-4
          .card.shadow-lg.border-0.rounded-4.p-4
            .card-body.text-center

              .mb-4
                i.bi.bi-shield-lock.display-3.text-primary

              h3.text-primary.fw-bold.mb-3 Enter OTP Code
              p.text-muted.fs-6 We've sent a 6-digit code to your email below. Please enter it to verify your identity.

              form(action="/user/password/otp" method="POST" autocomplete="off")
                .mb-3
                  input.form-control.text-center.fw-semibold.bg-light.border-0.fs-6.mb-2(type="text" name="email" id="email" readonly value=email)
                  //- Nếu muốn chỉ hiển thị không gửi dữ liệu, dùng span:
                  //- span.badge.bg-primary.bg-opacity-10.text-primary.fs-6.py-2.px-4 #{email}
                  //- input(type="hidden" name="email" value=email)
                
                .mb-3
                  label.form-label(for="otp") OTP Code
                  input#otp.form-control.text-center.rounded-pill.fs-4.py-3.letter-spacing-2(type="text" name="otp" maxlength="6" pattern="\\d{6}" required)

                .d-grid
                  button.btn.btn-primary.rounded-pill.p-2.mt-2(type="submit") Verify OTP

              .text-center.mt-3
                a.text-decoration-none.text-secondary.fs-6(href="/user/password/forgot") Didn't get the code? 
                  span.text-primary Resend
              
              .text-center.mt-2
                a.text-decoration-none.text-secondary.fs-6(href="/login") ← Back to Login

    style.
      .letter-spacing-2 { letter-spacing: 0.3em; }