extends ../../layouts/defaults.pug
include ../../mixins/box-head.pug

block content
  .container.my-3
    +box-head("Chat")
    .row
      .col-12
        .chat(my-id=user.id)
          .inner-head
            //- .inner-avatar EY
            //- .inner-name Em Yêu
          .inner-body
            each chat in chats
              div(class=(chat.user_id == user.id ? "inner-outgoing" : "inner-incoming" ))
                if(chat.user_id != user.id)
                  .inner-name #{chat.infoUser.fullName}
                .inner-content
                  | #{chat.content}
            .inner-list-typing
          .inner-foot
            form.inner-form(action="")
              .input-group
                input(
                  type="text"
                  placeholder="Nhập nội dung..."
                  name="content"
                  style="padding-right: 36px"
                  autocomplete="off"
                )
                span.button-icon
                  i.fa-solid.fa-face-smile(style="color: #B197FC; cursor: pointer;")
              button
                i.fa-solid.fa-paper-plane

  div(class="tooltip" role="tooltip")
    emoji-picker(class="light")
