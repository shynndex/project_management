extends ../../layouts/defaults.pug
include ../../mixins/box-head.pug

block content
  .container.my-3
  
    include ../../partials/list-btn-users.pug
    +box-head("Danh sách người dùng")
  
    .row  
      each user in users
        .col-3
          div(class="box-user")
            div(class="inner-avatar")
              img(src=user.avatar ? user.avatar : "/images/avatar.png" , alt=user.fullName)
            div(class="inner-info")
              div(class="inner-name") #{user.fullName}
              div(class="inner-button")
                button(class="btn btn-sm btn-primary me-1" btn-add-friend=user.id) Kết bạn
                button(class="btn btn-sm btn-secondary me-1" btn-cancel-friend=user.id) Hủy

block script 
  script(src="/js/users.js") 