extends ../../layouts/defaults.pug
include ../../mixins/box-head.pug

block content
  .container.my-3
  
    include ../../partials/list-btn-users.pug
    +box-head("Lời mời đã nhận")
  
    .row(data-user-accept=user.id)
      each user in users
        .col-4
          div(class="box-user")
            div(class="inner-avatar")
              img(src=user.avatar ? user.avatar : "/images/avatar.png" , alt=user.fullName)
            div(class="inner-info")
              div(class="inner-name") #{user.fullName}
              div(class="inner-button")
                button(class="btn btn-sm btn-primary me-1" btn-accept-friend=user.id) Chấp nhận
                button(class="btn btn-sm btn-secondary me-1" btn-refuse-friend=user.id) Xóa
                button(class="btn btn-sm btn-secondary me-1" btn-deleted-friend disabled) Đã Xóa
                button(class="btn btn-sm btn-primary me-1" btn-accepted-friend disabled) Đã chấp nhận


block script 
  script(src="/js/users.js") 