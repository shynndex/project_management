include ../mixins/sub-menu.pug

header.header 
    .container-fluid 
        .row.align-items-center
            .col-3 
                .inner-logo     
                    a(href="/")
                        img(src="/images/logo.png", alt="Logo" class="img-fluid") 

            .col-5 
                form(action="/search" method="GET")
                    div(class="form-group d-flex mb-0")
                        input(type="text" placeholder="Nhập từ khóa..." class="form-control" name="keyword" value=keyword)
                        button(type="submit" class="btn btn-primary") Tìm

            .col-4 
                .inner-menu 
                    ul 
                        li
                            a(href="/") Trang chủ
                        li(class="sub-menu")
                            - const pathProduct = "/products"  
                            a(href=pathProduct) Sản phẩm
                            +sub-menu(productCategory,pathProduct)
                        li  
                            a(href="/cart" style="position: relative")
                                i(class="fa-solid fa-cart-shopping fa-lg")
                                span(class="cart-badge") #{miniCart ? miniCart.totalQuantity : 0}
                        li  
                            a(href="/user/auth") Đăng ký/Đăng nhập